# ── Twilio Configuration ────────────────────────────────────────────────────
# Get these from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ── Target Phone Number ─────────────────────────────────────────────────────
# The phone number to call (Pretty Good AI test line)
TARGET_PHONE_NUMBER=+18054398008

# ── Deepgram API Key ────────────────────────────────────────────────────────
# Get from: https://console.deepgram.com
# Used for real-time speech-to-text (STT) and text-to-speech (TTS)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ── OpenAI API Key ──────────────────────────────────────────────────────────
# Get from: https://platform.openai.com/api-keys
# Used for generating patient dialogue responses
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ── ngrok Configuration (Optional) ─────────────────────────────────────────
# If you have an ngrok authtoken, set it here. Otherwise leave empty.
# ngrok will auto-detect the public URL if PUBLIC_URL is empty.
NGROK_AUTHTOKEN=

# ── Server Configuration ────────────────────────────────────────────────────
SERVER_HOST=0.0.0.0
SERVER_PORT=8765
# Set this to your ngrok HTTPS URL, or leave empty for auto-detection
# Example: https://abc123.ngrok-free.app
PUBLIC_URL=

# ── Call Settings ───────────────────────────────────────────────────────────
# Maximum call duration in seconds (default: 300 = 5 minutes)
MAX_CALL_DURATION=300

# Deepgram endpointing: milliseconds of silence before marking phrase as final
# Lower = more sensitive to pauses (default: 1000ms)
ENDPOINTING_MS=1000

# Utterance end detection: milliseconds of silence before bot responds
# Longer = less mid-sentence interruption (default: 2400ms)
UTTERANCE_END_MS=2400

# Response delay: extra milliseconds after utterance end before bot speaks
# Helps ensure agent has finished speaking (default: 200ms)
RESPONSE_DELAY_MS=200

# Speech final delay: milliseconds to wait after speech_final event
# (default: 1200ms)
SPEECH_FINAL_DELAY_MS=1200

# Silence keepalive: seconds of inactivity before bot speaks a keepalive prompt
# Prevents long silent gaps (default: 15 seconds)
SILENCE_KEEPALIVE_S=15

# Media silence interval: milliseconds between silence frames when bot is idle
# Lower = more frequent keepalive (default: 100ms)
# Helps prevent connection timeouts
MEDIA_SILENCE_INTERVAL_MS=100
